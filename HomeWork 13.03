import requests
import random
page = random.randint(1, 7438)
pageSize = 1
url = f'https://api.disneyapi.dev/character?pageSize={pageSize}&page={page}'
response = requests.get(url)
if response.ok:
    print(f"Name: \n\t{response.json()['data']['name']}".replace('[]', "-"))
    print(f"List of movies: \n\t{response.json()['data']['films']}".replace('[]', "-"))
    print(f"Short film: \n\t{response.json()['data']['shortFilms']}".replace('[]', "-"))
    print(f"Serials: \n\t{response.json()['data']['tvShows']}".replace('[]', "-"))
    print(f"Video games: \n\t{response.json()['data']['videoGames']}".replace('[]', "-"))
else:
    print('Щось пішло не так...')
    print(f'{response.status_code=}')
