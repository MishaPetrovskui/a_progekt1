import random as rnd

def input_list(massage="", random=False):
    if random:
        return [rnd.randint(-50, 50) for _ in range(10)]
    while True:
        numbers = [int(number) for number in input(massage).split()]
        if not numbers:
            print("Нічого нема")
        else:
            return numbers

def chisla(list):
    parni = 0
    neparni = 0
    dodatni = 0
    vidyemni = 0
    print(len(list))
    for par in list:
        if par % 2 == 0:
            parni += 1
    for nepar in list:
        if nepar % 2 != 0:
            neparni += 1
    for dod in list:
        if dod > 0:
            dodatni += 1
    for vid in list:
        if vid < 0:
            vidyemni += 1
    print(f"Парних: {parni} \nНепарних: {neparni} \nДодатних: {dodatni} \nВід'ємних: {vidyemni}")

chisla(input_list("Ведіть числа: "))
